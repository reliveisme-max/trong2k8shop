# 1. Chặn liệt kê danh sách file (Bảo mật)

Options -Indexes

# 2. Bật tính năng viết lại URL

<IfModule mod_rewrite.c>
    RewriteEngine On
    # Nếu bạn cài trong thư mục con (ví dụ localhost/trong2k8shop), hãy bỏ chú thích dòng dưới và sửa tên thư mục
    # RewriteBase /trong2k8shop/
</IfModule>

# 3. Chặn truy cập trực tiếp vào file config.php

<Files "config.php">
<IfModule mod_authz_core.c>
Require all denied
</IfModule>
<IfModule !mod_authz_core.c>
Order allow,deny
Deny from all
</IfModule>
</Files>

# 4. Chặn truy cập vào các file log, sql, error

<FilesMatch "\.(log|sql|txt)$">
<IfModule mod_authz_core.c>
Require all denied
</IfModule>
<IfModule !mod_authz_core.c>
Order allow,deny
Deny from all
</IfModule>
</FilesMatch>
